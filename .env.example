# GenAI RAG Service Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Service Configuration
# =============================================================================

# Environment: development, staging, production
RAG_ENVIRONMENT=development

# Server settings
RAG_HOST=0.0.0.0
RAG_PORT=8000

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
RAG_LOG_LEVEL=INFO

# Log format: json (production), console (development)
RAG_LOG_FORMAT=console

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding model identifier
RAG_EMBEDDING_MODEL_ID=text-embedding-ada-002

# Embedding vector dimension (must match model output)
RAG_EMBEDDING_DIMENSION=1536

# Batch size for embedding API calls
RAG_EMBEDDING_BATCH_SIZE=32

# Embedding provider: mock, openai, azure_openai
RAG_EMBEDDING_PROVIDER_TYPE=mock

# =============================================================================
# Chunking Configuration
# =============================================================================

# Default chunk size in tokens
RAG_DEFAULT_CHUNK_SIZE=512

# Default overlap between chunks in tokens
RAG_DEFAULT_CHUNK_OVERLAP=50

# Default chunking strategy: fixed_size, recursive
RAG_DEFAULT_CHUNKING_STRATEGY=fixed_size

# =============================================================================
# Storage Configuration
# =============================================================================

# Vector store type: memory, azure_search, pinecone
RAG_VECTOR_STORE_TYPE=memory

# Blob storage type: memory, azure_blob, s3
RAG_STORAGE_TYPE=memory

# =============================================================================
# Azure Configuration (when using Azure services)
# =============================================================================

# Azure AI Search
# RAG_AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
# RAG_AZURE_SEARCH_INDEX_NAME=rag-index

# Azure Blob Storage
# RAG_AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# RAG_AZURE_STORAGE_CONTAINER=documents

# =============================================================================
# OpenAI Configuration (when using OpenAI embeddings)
# =============================================================================

# RAG_OPENAI_API_KEY=sk-...
# RAG_OPENAI_ORGANIZATION=org-...

# =============================================================================
# Request Limits
# =============================================================================

# Maximum documents per ingestion request
RAG_MAX_DOCUMENTS_PER_REQUEST=100

# Maximum search results per query
RAG_MAX_SEARCH_RESULTS=100

# Request timeout in seconds
RAG_REQUEST_TIMEOUT_SECONDS=60
